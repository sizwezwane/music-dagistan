{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "*": ["*", "src/*", "server/src/*"]
    }
  },
  "include": ["src/**/*", "../src/graph.ts"],
  "exclude": ["node_modules", "dist"]
}

